<% @body_id = 'contact-form' %>
<div class="container">
  <%= form_for @contact, url: contact_path, method: :put, class: 'row' do |f| %>
    <div class="col-md-6 offset-md-3">
      <h1><%= Spree.t('contact_form.title') %></h1>
      <div class="card bg-light shadow-sm card-body">
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :message %>
          <%= f.text_area :message, class: 'form-control' %>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-lg" type="submit">
            Send
          </button>
        </div>
      </div>
    </div>
  <% end %>
</div>